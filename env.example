# YMERA Enhanced Learning System - Environment Configuration Template
# Copy this file to .env and update with your actual values

# ============================================================================
# GENERAL SETTINGS
# ============================================================================
ENVIRONMENT=development  # development, staging, production
SERVICE_NAME=ymera-enterprise
VERSION=2.0.0
DEBUG=true

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=ymera
DB_USERNAME=ymera_user
DB_PASSWORD=ymera_password  # CHANGE IN PRODUCTION
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# MongoDB/NoSQL
NOSQL_TYPE=mongodb
NOSQL_HOST=localhost
NOSQL_PORT=27017
NOSQL_DATABASE=ymera_nosql
NOSQL_USERNAME=ymera_user
NOSQL_PASSWORD=ymera_password  # CHANGE IN PRODUCTION

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=ymera_password  # CHANGE IN PRODUCTION
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5

# ============================================================================
# MESSAGE BROKER CONFIGURATION
# ============================================================================

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=ymera-consumers
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=true
KAFKA_MAX_POLL_RECORDS=500

# ============================================================================
# OBJECT STORAGE CONFIGURATION
# ============================================================================

# S3/MinIO/GCS/Azure Blob
STORAGE_PROVIDER=s3  # s3, gcs, azure
STORAGE_BUCKET=ymera-storage
STORAGE_REGION=us-east-1
STORAGE_ACCESS_KEY=ymera_admin  # CHANGE IN PRODUCTION
STORAGE_SECRET_KEY=ymera_password  # CHANGE IN PRODUCTION
STORAGE_ENDPOINT_URL=http://localhost:9000  # For MinIO, leave empty for AWS S3

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_SCRAPE_INTERVAL=15
PROMETHEUS_RETENTION_DAYS=15

# Jaeger (Distributed Tracing)
JAEGER_ENABLED=true
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
JAEGER_SAMPLER_TYPE=probabilistic
JAEGER_SAMPLER_PARAM=0.1

# Logging
LOGGING_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOGGING_FORMAT=json  # json, text
LOGGING_OUTPUT=stdout  # stdout, file
LOGGING_FILE_PATH=/var/log/ymera/app.log
LOGGING_MAX_BYTES=10485760  # 10MB
LOGGING_BACKUP_COUNT=5

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production  # Generate with: openssl rand -base64 32
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Key Management System (KMS)
KMS_PROVIDER=aws  # aws, gcp, azure, local
KMS_KEY_ID=your-kms-key-id
ENABLE_ENCRYPTION_AT_REST=true
ENABLE_ENCRYPTION_IN_TRANSIT=true

# ============================================================================
# LEARNING ENGINE CONFIGURATION
# ============================================================================

LEARNING_ENGINE_MAX_CONCURRENT_TASKS=10
LEARNING_ENGINE_PATTERN_RECOGNITION_ENABLED=true
LEARNING_ENGINE_ADAPTIVE_LEARNING_ENABLED=true
LEARNING_ENGINE_KNOWLEDGE_BASE_ENABLED=true
LEARNING_ENGINE_DEFAULT_LEARNING_RATE=0.001
LEARNING_ENGINE_BATCH_SIZE=32

# ============================================================================
# MULTIMODAL CONFIGURATION
# ============================================================================

MULTIMODAL_FUSION_STRATEGY=attention  # early, late, attention, cross_modal
MULTIMODAL_TEXT_MODEL=bert-base-uncased
MULTIMODAL_VISION_MODEL=google/vit-base-patch16-224
MULTIMODAL_AUDIO_MODEL=openai/whisper-base
MULTIMODAL_CROSS_MODAL_MODEL=openai/clip-vit-base-patch32
MULTIMODAL_MODEL_CACHE_DIR=/tmp/ymera_models
MULTIMODAL_MAX_SEQUENCE_LENGTH=512

# ============================================================================
# EXPLAINABILITY (XAI) CONFIGURATION
# ============================================================================

EXPLAINABILITY_ENABLED_METHODS=lime,shap,integrated_gradients
EXPLAINABILITY_LIME_NUM_SAMPLES=5000
EXPLAINABILITY_SHAP_BACKGROUND_SAMPLES=100
EXPLAINABILITY_GENERATE_VISUALIZATIONS=true
EXPLAINABILITY_VISUALIZATION_FORMAT=png

# ============================================================================
# AUTOML CONFIGURATION
# ============================================================================

AUTOML_MAX_TRIALS=100
AUTOML_MAX_TRAINING_TIME_HOURS=24
AUTOML_NAS_ENABLED=false
AUTOML_NAS_SEARCH_SPACE=efficient  # efficient, full, custom
AUTOML_EXPERIMENT_TRACKING_URI=http://localhost:5000

# ============================================================================
# ANALYTICS CONFIGURATION
# ============================================================================

ANALYTICS_CAUSAL_INFERENCE_ENABLED=true
ANALYTICS_TIME_SERIES_ENABLED=true
ANALYTICS_GRAPH_ANALYTICS_ENABLED=true
ANALYTICS_NLP_ANALYTICS_ENABLED=true
ANALYTICS_VISION_ANALYTICS_ENABLED=true
ANALYTICS_MAX_GRAPH_NODES=100000

# ============================================================================
# INFRASTRUCTURE CONFIGURATION
# ============================================================================

INFRASTRUCTURE_KUBERNETES_ENABLED=true
INFRASTRUCTURE_KUBERNETES_NAMESPACE=ymera
INFRASTRUCTURE_SERVICE_MESH_ENABLED=true
INFRASTRUCTURE_SERVICE_MESH_TYPE=istio  # istio, linkerd
INFRASTRUCTURE_AUTO_SCALING_ENABLED=true
INFRASTRUCTURE_MIN_REPLICAS=2
INFRASTRUCTURE_MAX_REPLICAS=10

# ============================================================================
# DISASTER RECOVERY CONFIGURATION
# ============================================================================

DR_BACKUP_ENABLED=true
DR_BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM (cron format)
DR_BACKUP_RETENTION_DAYS=30
DR_BACKUP_PROVIDER=aws  # aws, gcp, azure
DR_RPO_MINUTES=60  # Recovery Point Objective
DR_RTO_MINUTES=30  # Recovery Time Objective

# ============================================================================
# CLOUD PROVIDER SPECIFIC (Optional)
# ============================================================================

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# GCP
GCP_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Azure
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret

# ============================================================================
# FEATURE FLAGS
# ============================================================================

FEATURE_MULTIMODAL_ENABLED=true
FEATURE_EXPLAINABILITY_ENABLED=true
FEATURE_AUTOML_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_DISTRIBUTED_TRAINING_ENABLED=true
